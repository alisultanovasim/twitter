{% extends 'base.html.twig' %}

{% block title %}Timeline{% endblock %}

{% block body %}
    <div class="container" style="max-width: 600px; margin: 50px auto;">
        <h1>Timeline</h1>

        {% if app.user %}
            <a href="{{ path('tweet_create') }}" class="btn btn-primary mb-3">New Tweet</a>
        {% endif %}

        {% for tweet in tweets %}
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">
                        <a href="{{ path('user_profile', {username: tweet.user.username}) }}">
                            @{{ tweet.user.username }}
                        </a> ¬∑
                        {{ tweet.createdAt|date('d M Y H:i') }}
                    </h6>
                    <p class="card-text">{{ tweet.content }}</p>

                    {% if app.user %}
                        <button onclick="likeToggle({{ tweet.id }})" class="btn btn-sm">
                            <span id="like-{{ tweet.id }}">
                                {{ tweet.isLikedBy(app.user) ? '‚ù§Ô∏è' : 'ü§ç' }}
                            </span>
                            <span id="count-{{ tweet.id }}">{{ tweet.likesCount }}</span>
                        </button>
                    {% else %}
                        <span class="text-muted">ü§ç {{ tweet.likesCount }}</span>
                    {% endif %}
                    {% if app.user and tweet.user.id == app.user.id %}
                        <form method="post" action="{{ path('tweet_delete', {id: tweet.id}) }}"
                              onsubmit="return confirm('Tweet silinsin?');" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tweet.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <p class="mb-0">H…ôl…ô he√ß bir tweet yoxdur.</p>
                {% if app.user %}
                    <a href="{{ path('tweet_create') }}" class="btn btn-primary mt-2">ƒ∞lk Tweet-i yarat</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary mt-2">Login olun</a>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        function likeToggle(tweetId) {
            fetch(`/tweet/${tweetId}/like`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': '{{ csrf_token("tweet_like") }}'
                }
            })
                .then(res => res.json())
                .then(data => {
                    document.getElementById(`like-${tweetId}`).innerText = data.liked ? '‚ù§Ô∏è' : 'ü§ç';
                    document.getElementById(`count-${tweetId}`).innerText = data.count;
                })
                .catch(err => {
                    console.error('Error:', err);
                    alert('X…ôta ba≈ü verdi');
                });
        }
    </script>
{% endblock %}